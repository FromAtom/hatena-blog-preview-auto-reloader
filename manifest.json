{
    "name": "Hatena Blog' Preview Auto Reloader",
    "version": "0.1",
    "manifest_version": 2,
    "description": "リロードします。",
    "permissions": [
        "tabs",
        "http://blog.hatena.ne.jp/",
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "page_action": {
        "default_icon": "on.png"
    }
}
