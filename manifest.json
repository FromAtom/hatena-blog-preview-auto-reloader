{
    "name": "Hatena Blog' Preview Auto Reloader",
    "version": "0.1",
    "manifest_version": 2,
    "description": "リロードします。",
    "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ],

    "background": {
        "scripts": ["jquery-2.1.0.min.js", "background.js"]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "page_action": {
        "default_icon": "icon19.png",
        "default_title": "Yea!"
    }
}
